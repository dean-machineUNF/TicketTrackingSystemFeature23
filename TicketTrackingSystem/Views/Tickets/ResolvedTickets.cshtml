<table class="table">
    <tr>
        <th>
            
            @Html.ActionLink("ID", "ResolvedTickets", new { sortBy = 1 })
        </th>
        
        <th>
            @Html.ActionLink("Description", "ResolvedTickets", new { sortBy = 2 })
           
        </th>
        <th>
            @Html.ActionLink("Comment", "ResolvedTickets", new { sortBy = 3 })
           
        </th>
        <th>
            @Html.ActionLink("Severity", "ResolvedTickets", new { sortBy = 4 })
           
        </th>
        <th>
            @Html.ActionLink("Date Created", "ResolvedTickets", new { sortBy = 5 })
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketID)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TicketDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketSeverity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketDateCreated)
            </td>
           
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TicketID }) |
                @Html.ActionLink("Re-Open Ticket", "ReopenTicket", new { id = item.TicketID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TicketID })
            </td>
               
        </tr>
    }

</table>
